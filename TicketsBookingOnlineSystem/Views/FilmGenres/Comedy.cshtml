@model IEnumerable<TicketsBookingOnlineSystem.ViewModels.FilmViewModel>

@{
    ViewBag.Title = "Comedy";
}

<h2>Komedie</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FilmGenreName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FilmGenreName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) 
        </td>
    </tr>
}

</table>
