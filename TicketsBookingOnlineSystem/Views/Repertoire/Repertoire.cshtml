@model TicketsBookingOnlineSystem.ViewModels.SeanceDateViewModel

@{
    ViewBag.Title = "Repertoire";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" style="width: 100%;">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>

    <!-- Wrapper for slides -->
    <div class="carousel-inner">

        <div class="item active">
            <img src="~/Content/img/carousel-logo.jpg" alt="item1" style="width: 100%;">
            <div class="carousel-caption">
                <h3>Listy do M 3</h3>
                <p>Przeżyj świąteczną przygodę razem z panem Karolakiem!</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/img/carousel-logo.jpg" alt="item2" style="width: 100%;">
            <div class="carousel-caption">
                <h3>Szybcy i wśiekli 999</h3>
                <p>Leć w kosmos razem z Dominickiem i jego rodziną!</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/img/carousel-logo.jpg" alt="item3" style="width: 100%;">
            <div class="carousel-caption">
                <h3>Rustom</h3>
                <p>Nie oglądałem tego filmu, ale ty możesz!</p>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/img/carousel-logo.jpg" alt="item3" style="width: 100%;">
            <div class="carousel-caption">
                <h3>Film4</h3>
                <p>Nie oglądałem tego filmu, ale ty możesz!</p>
            </div>
        </div>

    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<br><h2>Repertuar</h2><br>
@foreach (var item in Model.DateMenu)
{
    @Html.ActionLink(item.Date.ToString("dd.MM.yyyy"), "Repertoire", "Repertoire", new { id = item.Date.ToString("dd-MM-yyyy")},  null) <t> &nbsp; &nbsp;</t>
}
<br><br>
<table class="table table-striped">
    <tr>
        <th>
            Tytuł
        </th>
        <th>
            Gatunek
        </th>
        <th>
            Czas trwania
        </th>
        <th>
            Godziny seansu
        </th>
    </tr>

    @foreach (var item in Model.Films)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Film.Title, "Index", "FilmDetails", new { id = item.Film.Id }, new { })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film.FilmGenreName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Film.Duration)
            </td>
            <td>
                @foreach (var date in item.Seances)
                {
                    @Html.ActionLink(date.Date.ToString("HH:mm"), "choosenSeance", "Repertoire", new { id = date.Id}, null) <a>&nbsp;</a>
                }
            </td>
        </tr>
    }

</table>

