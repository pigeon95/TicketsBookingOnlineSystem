<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-color:whitesmoke">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Kino", "Repertoire", "Repertoire", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Repertuar", "Repertoire", "Repertoire")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Dramaty", "Drama", "FilmGenres")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Komedie", "Comedy", "FilmGenres")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Horrory", "Horror", "FilmGenres")</li>
                </ul>
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Kino akcji", "Action", "FilmGenres")</li>
                </ul>
                
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <br>
        <center>
            <footer>
                <p>&copy; @DateTime.Now.Year - Powered by Kacper Gołębiewski</p>
            </footer>
        </center>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
